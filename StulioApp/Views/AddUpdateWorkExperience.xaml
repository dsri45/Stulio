<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stulio.Views.AddUpdateWorkExperience"
             Title="Work Experience">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="SlateGray" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Margin="10" Spacing="15">
        <VerticalStackLayout>
            <Label Text="Role" />
            <Entry  Text="{Binding WorkExperience.Role}" Placeholder="ex. Barista" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Establishment"  />
            <Entry Text="{Binding WorkExperience.Establishment}" Placeholder="ex. Mercury's Coffee" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Duration of Participation (Start-End)" />
            <DatePicker Date="{Binding WorkExperience.StartDate, Mode=TwoWay}" />
            <DatePicker Date="{Binding WorkExperience.EndDate, Mode=TwoWay}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Description" />
            <Editor x:Name="editor" Placeholder="Description"   HeightRequest="150"  Text="{Binding WorkExperience.Description}"/>
        </VerticalStackLayout>


        <Button Text="Save" BackgroundColor="#FF9F09" Clicked="UpdateWorkExperienceCommand_Clicked"/>
    </StackLayout>
</ContentPage>
