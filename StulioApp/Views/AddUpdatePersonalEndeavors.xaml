<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stulio.Views.AddUpdatePersonalEndeavors"
             Title="Personal Endeavors">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="SlateGray" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Margin="10" Spacing="15">
        <VerticalStackLayout>
            <Label Text="Endeavor" />
            <Entry  Text="{Binding PersonalEndeavors.Title}" Placeholder="Title" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Description"  />
            <Editor x:Name="editor" Placeholder="Description"  HeightRequest="150"  Text="{Binding PersonalEndeavors.Description}"/>
        </VerticalStackLayout>


        <Button Text="Save" BackgroundColor="#8e00c2" Clicked="UpdatePersonalEndeavorsCommand_Clicked"/>
    </StackLayout>
</ContentPage>


