<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Stulio.ViewModels"
             x:DataType="viewModels:ForumPageViewModel"
             x:Class="Stulio.Views.FourmPage"
             Title="Tips And Tricks">
    
    <ScrollView>
        <StackLayout Margin="10" Spacing="0">

                <VerticalStackLayout>
                    <Label Text="Powered by ChatGPT" FontAttributes="Italic" TextColor="#383b67" HorizontalTextAlignment="Start" Margin="0,20,0,0" FontSize="16" />

                    <Editor x:Name="editor"
                    Placeholder="Preparing you a question..."
                    HeightRequest="1000"
                    Text="{Binding GptReponse.PromptResponse}" />
                </VerticalStackLayout>
                <!--<Button Text="Save" Command="{Binding UpdateAboutMeCommand}"/>-->

            </StackLayout>
    </ScrollView>
</ContentPage>

    