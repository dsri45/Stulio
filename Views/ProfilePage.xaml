                                  ImageSource="football.png"
                                  LineBreakMode="CharacterWrap"
                                  FontAttributes="Bold"
                                  BackgroundColor="White"
                                  FontSize="13"
                                  WidthRequest="165"
                                  HeightRequest="100"
                                  TextColor="#4A7CB9"
                                  BorderColor="#4A7CB9"
                                  BorderWidth="4"
                                  CornerRadius="5"
                                  HorizontalOptions="FillAndExpand"
                                  VerticalOptions="Start"
                                  ContentLayout="Right,10"
                                  Margin="4,0,5,10" />

                        <!-- Projects -->
                        <Button Grid.Row="2" Grid.Column="1"
                                Text="Projects"
                                ImageSource="projects_icon.png"
                                LineBreakMode="WordWrap"
                                FontAttributes="Bold"
                                BackgroundColor="White"
                                FontSize="15"
                                WidthRequest="165"
                                HeightRequest="100"
                                TextColor="#FF9F09"
                                BorderColor="#FF9F09"
                                BorderWidth="4"
                                CornerRadius="5"
                                HorizontalOptions="FillAndExpand" 
                                Margin="4,0,5,10"/>


                        <!-- Additonal Information -->
                        <Button Grid.Row="2" Grid.Column="2"
                                Text="Additonal Involvements"
                                ImageSource="additionalinvolvments_icon.png"
                                LineBreakMode="WordWrap"
                                FontAttributes="Bold"
                                BackgroundColor="White"
                                Opacity="0.7"
                                FontSize="12.3"
                                WidthRequest="165"
                                HeightRequest="100"
                                TextColor="#6C35FF"
                                BorderColor="#6C35FF"
                                BorderWidth="4"
                                CornerRadius="5"
                                HorizontalOptions="FillAndExpand" 
                                ContentLayout="Right,10"
                                Margin="4,0,5,10"/>
                    </Grid>
                </StackLayout>      
