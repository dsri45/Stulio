                        <Label Text="Email: dhanasriprabhu03@gmail.com" TextColor="Black"  FontSize="13"
                         LineBreakMode="WordWrap"/>
                        <Label Text="Phone: 425-606-9993" TextColor="Black"  FontSize="13"
