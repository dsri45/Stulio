          <Frame x:Name="aboutMeFrame"
           BackgroundColor="White"
           CornerRadius="15"
           Padding="15"
           Margin="20,20,20,0" >

                <StackLayout>

                   <Label Text="About Me"
                          
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="18"
                   VerticalOptions="CenterAndExpand"       
                   Margin="0,0,0,0"/>
                    <Button Grid.Column="2" ImageSource="pen.png" Margin="-120,-30,0,0" WidthRequest="20" HeightRequest="20" CornerRadius="9" HorizontalOptions="Center" BackgroundColor="#9192b7" Command="{Binding UpdateAboutMeCommand}" />
                    <Label Text="{Binding StudentDetail.AboutMe}" TextColor="Black"  FontSize="13"
                   LineBreakMode="WordWrap"/>
                    
                </StackLayout>
            </Frame>

            <Frame x:Name="ButtonsFrame"
                   BackgroundColor="#F7F7F7"
                   CornerRadius="15"
                   Padding="15"
                   Margin="8,0,8,0"
                   HasShadow="True"
                   BorderColor="Transparent">

                   <StackLayout >

                    <Grid  RowDefinitions ="Auto,Auto,Auto"  ColumnDefinitions="Auto,Auto,Auto,Auto,Auto" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,10,0,0">
                        <!-- Academic Achivements -->
                        <Button  Grid.Row="0" Grid.Column="1"
